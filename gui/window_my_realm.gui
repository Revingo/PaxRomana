				}

				### Diarchy view button
				button_standard = {
					name = "open_future_diarchy_tutorial_uses_this"
					widgetid = "open_future_diarchy_tutorial_uses_this"
					layoutpolicy_horizontal = expanding
					size = { 0 60 }
					
					visible = "[Not( IsLandlessAdventurer( GetPlayer ) )]"
