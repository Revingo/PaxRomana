						onclick = "[GetScriptedGui('set_dynastic_factions_variable_gui').Execute( GuiScope.SetRoot( GetPlayer.MakeScope ).End)]"
						onclick = "[GetVariableSystem.Set('dyn_tab', Select_CString(EqualTo_int32(FixedPointToInt( GetPlayer.MakeScope.Var('my_factions').GetValue ), '(int32)1'), 'my_factions', 'liege_factions')))]"

						text = "MY_REALM_WINDOW_FACTIONS_TAB"
					}
				}

